#include <stdio.h>
/**
 * positive_or_negative - funciton to check if a number is zero
 *@number: check if it is zero
 * Return: Always 0 (Success)
 */
int positive_or_negative(int number)
{

	int n = number;

	if (n > 0)
        {
                printf("%d is positive\n", n);
        }
	if else (n == 0)
	{
		printf("%d is zero\n", n);
	}
	else if (n < 0)
        {
                printf("%d is negative\n", n);
        }
	return (0);
}
